{
  "server": {
	"type": "meilisearch",
	"host": "http://search:7700",
	"key": "secretkey1234"
  },
  "reindexOnStart": true,
  "collections": {
	"products": {
	  "filter": {
		"status": "published"
	  },
	  "fields": [
		"title",
		"thumbnail.id",
		"thumbnail.name",
		"category.title",
		"description"
	  ]
	},
	"blog_posts": {
	  "filter": {
		"status": "published"
	  },
	  "fields": [
		"title",
		"category.title",
		"description",
		"tags.tags_id.tag"
	  ],
	  "flatten": true
	}
  }
}
